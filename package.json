{
  "name": "PocketBook_Collection_Manager",
  "version": "1.1.0",
  "description": "An app to manage collections on PocketBook ereater from your computer",
  "author": "anareaty",
  "dependencies": {
    "sqlite3": "^4.2.0"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "transpile": "npx babel --watch app/jsx --out-dir app/js --presets react-app/prod ",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "electron-builder --dir --win",
    "dist-win": "electron-builder --win"
  },
  "build": {
    "appId": "myid",
    "extraFiles": ["./path.txt"],
    "win": {
      "target": [
        "zip"
      ]
    }
  }
}
